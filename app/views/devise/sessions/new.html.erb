<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>
      
      <h2>Welcome to Facepet</h2><br>
    </div>
    
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: 'm-t'}) do |f| %>
            
            <div class="form-group">
              
                <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: "Email" %>
              
            </div>

            <div class="form-group">
              
                <%= f.password_field :password, class: 'form-control', autocomplete: "off", placeholder: "Password" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <div class="col-lg-12">
                  <div class="checkbox">
                    <label>
                      <%= f.check_box :remember_me %> Remember me
                    </label>
                  </div>
                </div>
              </div>
            <% end -%>

            <div class="form-group">
              <div class="col-sm-12">
                <%= f.submit "Log in", class: 'btn btn-primary block full-width m-b' %>
              </div>
            </div>
            <%= render "devise/shared/links" %>
          <% end %>

        </div>
      </div>
   